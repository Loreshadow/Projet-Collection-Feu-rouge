{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<main class="contact-page">
    <h1 class="contact-title">Contactez-nous</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}
    <div class="contact-form-container">
        {{ form_start(contactForm, {'method': 'POST', 'attr': {'class': 'contact-form'}}) }}
            {{ form_row(contactForm.name) }}
            {{ form_row(contactForm.email) }}
            {{ form_row(contactForm.subject) }}
            {{ form_row(contactForm.message) }}
            {{ form_errors(contactForm) }}
            <button class="btn-contact" type="submit">Envoyer</button>
        {{ form_end(contactForm) }}
    </div>
</main>
{% endblock %}