{% extends 'base.html.twig' %}

{% block title %}Modifier le commentaire{% endblock %}

{% block body %}
<main class="edit-comment-page">
    <div class="edit-comment-container">
        <div class="edit-header">
            <h1>Modifier votre commentaire</h1>
            <p class="subtitle">Apportez les modifications souhaitées</p>
        </div>
        
        <div class="edit-content">
            <div class="original-comment">
                <div class="original-label">Commentaire original</div>
                <div class="original-text">{{ comment.content }}</div>
            </div>

            {{ form_start(commentForm, {'attr': {'class': 'edit-comment-form'}}) }}
                <div class="form-group">
                    {{ form_label(commentForm.content, 'Nouveau contenu') }}
                    {{ form_widget(commentForm.content, {'attr': {'placeholder': 'Modifiez votre commentaire...'}}) }}
                </div>
                
                <div class="form-actions">
                    <a href="{{ path('traffic_light_detail', {id: comment.trafficLight.id}) }}" class="btn-secondary">
                        ❌ Annuler
                    </a>
                    <button class="btn-primary" type="submit">
                        ✅ Sauvegarder
                    </button>
                </div>
            {{ form_end(commentForm) }}
        </div>
    </div>
</main>
{% endblock %}