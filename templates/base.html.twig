<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
    <header>
<nav class="navbar">
    <button class="navbar-burger" aria-label="Menu" aria-expanded="false">
        <span></span>
        <span></span>
        <span></span>
    </button>
    <div class="navbar-menu-responsive">
        <ul class="navbar-menu-col">
            <li><a href="{{ path('Home') }}" class="menu-items">Accueil</a></li>
            <li><a href="{{ path('trafficlight') }}" class="menu-items">Ajouter un feu tricolore</a></li>
            <li><a href="{{ path('traffic_list') }}" class="menu-items">Galerie</a></li>
        </ul>
        <ul class="navbar-menu-col">
            {% if app.user and is_granted('ROLE_ADMIN') %}
                <li><a href="{{ path('admin') }}" class="menu-items">Panel D'Administration</a></li>
            {% endif %}
            {% if app.user %}
                <li><a href="{{ path('logout') }}" class="menu-items">Se déconnecter</a></li>
                <li class="nav-avatars-container">
                    <a href="">
                        <img src="/img/6596121.png" alt="Avatar" class="nav-avatar">
                    </a>
                </li>
                <li class="menu-items">Bonjour {{ app.user.userIdentifier }}</li>
            {% else %}
                <li><a href="{{ path('register') }}" class="menu-items">S'inscrire</a></li>
                <li><a href="{{ path('login') }}" class="menu-items">Se connecter</a></li>
            {% endif %}
        </ul>
    </div>
    <ul class="menu-items-container">
        <li><a href="{{ path('Home') }}" class="menu-items">Accueil</a></li>
        <li><a href="{{ path('trafficlight') }}" class="menu-items">Ajouter un feu tricolore</a></li>
        <li><a href="{{ path('traffic_list') }}" class="menu-items">Galerie</a></li>
    </ul>
    <ul class="navbar-users">
        {% if app.user and is_granted('ROLE_ADMIN') %}
            <li><a href="{{ path('admin') }}" class="menu-items">Panel D'Administration</a></li>
        {% endif %}
        {% if app.user %}
            <li><a href="{{ path('logout') }}" class="menu-items">Se déconnecter</a></li>
            <div class="nav-avatars-container">
                <a href="">
                    <img src="/img/6596121.png" alt="Avatar" class="nav-avatar">
                </a>
            </div>
            <li class="menu-items">Bonjour {{ app.user.userIdentifier }}</li>
        {% else %}
            <li><a href="{{ path('register') }}" class="menu-items">S'inscrire</a></li>
            <li><a href="{{ path('login') }}" class="menu-items">Se connecter</a></li>
        {% endif %}
    </ul>
</nav>
    </header>
        {% block body %}{% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    <footer class="main-footer">
        <div class="footer-content">
            <div class="footer-left">
                <span>© {{ "now"|date("Y") }} Projet Symfony Collection - Feux Tricolores</span>
            </div>
            <div class="footer-center">
                <a href="{{ path('Home') }}">Accueil</a> 
                <a href="{{ path('traffic_list') }}">Galerie</a> 
            </div>
            <div class="footer-right">
                <span>Réalisé par <strong>Sasha</strong></span>
            </div>
        </div>
    </footer>
    </body>
</html>