{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<main class="home-page">
    {# section HERO  #}
    <section class="hero">
        <div class="circle-light-hollow"></div>
        <div class="hero__image">
            {# traffic light number 1#}
            <div class="traffic-light">
                <div class="light red"></div>
                <div class="light orange"></div>
                <div class="light green"></div>
            </div>
        </div>
        <div class="hero__content">
            <h1>Bienvenue au feu Rouge</h1>
            <p class="hero__subtitle">
                Plongez dans la passion des feux de signalisation du monde entier.
            </p>
            <a href="{{ path('traffic_list')}}" class="btn">Notre gallerie</a>
        </div>
        {# traffic light number 2#}
        <div class="hero__image">
            <div class="traffic-light">
                <div class="light red"></div>
                <div class="light orange"></div>
                <div class="light green"></div>
            </div>
        </div>
    </section>

    {# section about #}
    <section class="about">
        <div class="about__container">
            <div class="about__content">
                <h2>À propos de nous</h2>
                <p>
                    Nous collectionnons des feux tricolores venus du monde entier.
                    Formes, couleurs, mécanismes : chaque pièce raconte une histoire.
                </p>
                <p>
                    Ce site est dédié à partager notre passion pour ces objets lumineux, à la fois techniques et symboliques.
                </p>
            </div>
            <div class="about__image">
                <img src="/img/about_img.webp" alt="À propos de nous">
            </div>
        </div>
    </section>

    {# section pruducts  #}
    <section id="Produits">
        <div class="produit-heading-container">
            <h2>Voici la liste de nos derniers produits ajoutés :</h2>
        </div>
        <div class="produit-content-container">
            <div class="card-container">
                {% for product in lastTrafficLights %}
                    <div class="card">
                        <div class="card-content-container">
                            <div class="card-heading">
                                <div class="card-img-container">
                                    {% if product.image %}
                                        <img src="/uploads/images/{{ product.image }}" alt="{{ product.name }}" style="max-width:100px;max-height:100px;">
                                    {% else %}
                                        <div class="img-placeholder">Aucune image</div>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="card-content">
                                <h3>{{ product.name }}</h3>
                                <p>{{ product.description }}</p>
                                <p><strong>Valeur estimée :</strong> {{ product.value }}</p>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <p>Aucun produit trouvé.</p>
                {% endfor %}
            </div>
        </div>
    </section>
</main>
{% endblock %}