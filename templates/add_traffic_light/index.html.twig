{% extends 'base.html.twig' %}

{% block title %}Ajouter un feu tricolore.{% endblock %}

{% block body %}
    <main class="add-traffic-page">
        <h1 class="add-traffic-title">Ajouter un feu tricolore</h1>
        {{ form_start(AddTrafficTypeForm, {'attr': {'class': 'add-traffic-form'}}) }}
